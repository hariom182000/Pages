<% layout('layouts/boilerplate') %>
   <div class="row">
       <h1 class="text-center">new Book</h1>
       <div class="col-6 offset-3">
        <form action="/books" method="POST" novalidate class="validation" enctype="multipart/form-data">
            <div class="mb-3">
            <label class="form-label"for="title">give title</label>
            <input class="form-control" type="text" id="title" name="book[title]" required>
            <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="author">give author</label>
                <input class="form-control" type="text" id="author" name="book[author]" required>
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="description">Description</label>
                <input class="form-control" type="text" id="description" name="book[description]" required>
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <label class="form-label"for="location">country:</label>
                <input class="form-control" type="text" id="location" name="book[location]" required>
            </div>
            <div class="mb-3">
                <label class="form-label"for="pages">pages</label>
                <input class="form-control" type="text" id="pages" name="book[pages]" required>
                <div class="valid-feedback">looks good</div>
            </div>
            <div class="mb-3">
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label"></label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>

                  <!--
                <input type="file" name="image" id="" multiple>
                
                <label class="form-label"for="url">give url</label>
                <input class="form-control" type="text" id="url" name="book[image]" required>
                <div class="valid-feedback">looks good</div>
                -->
                
            </div>
            <div class="mb-3">
                <button class="btn btn-success">add book</button>
            </div>
        
        </form>
    
        <a href="/books">back to all books</a>
       </div>
   </div>